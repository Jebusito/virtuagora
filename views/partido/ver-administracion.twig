{# VARIBLES #}
{% set footer = true %}
{% set barraNav = true %}
{% set html_class = '' %}
{% set body_class = 'color-partido' %}

{% extends "master.twig" %}

{# ----------------------------------------------------------- #}
{% block linkhead %}
{% block linkheads_cont %}{% endblock linkheads_cont %}
{% endblock %}
{# ----------------------------------------------------------- #}
{% block body %}
<div class="jefe-panel">
    <div class="row">
        <div class=" panel-izq medium-3 columns color-partido">
            <ul class="opciones">
                <li class="datos-partido">
                   <div class="text-left">
                       <img src="{{ baseUrl() }}/img/partido/{{ partido_id }}/64.png" alt="Avatar partido">
                    <p>{{ partido_nombre }}</p>
                   </div>
                </li>
                <li><a href="{{ urlFor('shwModifRolPartido', {'idPar': partido.id}) }}">Gestionar roles</a></li>
                <li><a href="{{ urlFor('shwModifPartido', {'idPar': partido.id}) }}">Modificar datos</a></li>
                <li><a href="#">Eliminar partido</a></li>
                <li><a href="{{ urlFor('shwIndex') }}" class="bt-volver button oposite radius expand"><i class="fa fa-undo fa-fw"></i> Volver al inicio</a></li>
            </ul>
        </div>
        <div class="panel-der medium-9 columns">
            <div class="row">
                <div class="intro-titulo">
                <h1><b><i class="fa fa-caret-right fa-fw"></i>{{ intro_titulo|upper }}</b>&nbsp;<small><i class="fa fa-question-circle fa-fw"></i></small></h1>
                </div>
            </div>
            {% block configuracion %}
            {% endblock configuracion %}
        </div>
    </div>
</div>
{% endblock body %}
{# ----------------------------------------------------------- #}
{% block scripts %}
<script src="{{ baseUrl() }}/assets/js/autosize/autosize.min.js"></script>
