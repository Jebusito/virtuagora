{% set vars_head = {
'url_atras' : '#' ,
'i_class_icon' : 'fa fa-edit fa-fw' ,
'titulo' : 'Crear una propuesta'}
%}

{% extends "master.twig" %}

{% block titulo %}
Virtuagora - Crear una propuesta
{% endblock %}

{% block body %}
{% include 'misc/contenido-head.html' with vars_head %}
<!-- Fila c/ titulo y otros datos! -->
<section id="alta-contenido">
    <form action="publicar-propuesta" method="POST">
        <div class="row">
            <div class="large-11 large-centered columns">
                <label><h6 class="subheader"><i class="fa fa-pencil fa-fw"></i>&nbsp;&nbsp;<b>Titulo de la propuesta</b></h6></label>
                <input name="titulo" type="text" placeholder="Escriba aqui el titulo de la propuesta" />
            </div>
        </div>
        <div class="row">
            <div class="large-11 large-centered columns">
                <label><h6 class="subheader"><i class="fa fa-tag fa-fw"></i>&nbsp;&nbsp;<b>Categorias asociadas</b></h6></label>
                <input name="tags" type="text" placeholder="Comience escribiendo una categoria en particular" />
            </div>
        </div>
        <div class="row">
            <div class="large-11 large-centered columns">
                <label><h6 class="subheader"><i class="fa fa-file-text-o fa-fw"></i>&nbsp;&nbsp;<b>Descripcion de la propuesta</b></h6></label>
                <textarea name="contenido" placeholder="Describa de que se trata la propuesta" rows=10></textarea>
            </div>
        </div>
        <div class="row">
            <div class="large-11 large-centered columns">
                <label><h6 class="subheader"><i class="fa fa-tag fa-fw"></i>&nbsp;&nbsp;<b>Problematicas asociadas</b></h6></label>
                <input name="problematicas" type="text" placeholder="Comience escribiendo el numero de una problematica">
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="large-6 large-centered columns">
                <input type="submit" class="button small expand success" value="Publicar">
            </div>
        </div>
    </form>
</section>
{% include 'misc/contenido-foot.html' with { 'comments' : false } %}
{% endblock %}

{% block scripts %}
<script src="{{ baseUrl }}/assets/js/foundation/foundation.tooltip.js"></script>
<script src="{{ baseUrl }}/assets/js/underscore/underscore-min.js"></script>
{% endblock %}
