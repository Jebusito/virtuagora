{% block scripts %}
<script>
    $(document).ready(function() {

    });

    $('.form-pre-registro').submit(function(){
        window.location.href = "{{urlFor('shwCrearUsuario')}}#"
            + $('input[name="nombre"]').val() + '&'
            + $('input[name="apellido"]').val() + '&'
            + $('input[name="email"]').val();
        return false;
    });

</script>
{% endblock %}
