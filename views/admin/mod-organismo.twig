{# VARIBLES #}

{% extends "admin/ver-administracion.twig" %}

{# ----------------------------------------------------------- #}
{% block titulo %}Virtuagora - Modificar un organismo{% endblock %}
{# ----------------------------------------------------------- #}
{% set intro_titulo = 'Modificar un organismo' %}
{# ----------------------------------------------------------- #}
{% block administracion %}
<div class="crear-organismo">
    <div class="large-8 columns">
        <div class="cambiar-avatar">
            <div class="large-5 columns">
                <div class="wrapper-elementos">
                    <div class="header" style="border-bottom: 0;">
                        <i class="fa fa-question-circle fa-fw fa-lg"></i><i class="fa fa-pencil fa-fw fa-lg"></i> Modificar imagen del organismo

                    </div>

                </div>
                <form id="cambiar-imagen" action="{{ urlFor('runModifImgOrganis', {'idOrg': organismo.id}) }}" method="POST" enctype="multipart/form-data">
                    <div class="fileUpload button large radius" style="margin-bottom:0;" onclick='$("#uploadBtn").click()'>
                        <input id="uploadBtn" name="imagen" form="cambiar-imagen" type="file" onchange="this.form.submit();" class="upload" />
                        <i class="fa fa-photo fa-fw fa-lg"></i> Cargar imagen
                    </div>
                </form>
            </div>
            <div class="show-avatares large-7 columns">
                <img src="{{ avatarUrl(organismo.img_tipo, organismo.img_hash, 32) }}">
                <img src="{{ avatarUrl(organismo.img_tipo, organismo.img_hash, 64) }}">
                <img src="{{ avatarUrl(organismo.img_tipo, organismo.img_hash, 160) }}">
            </div>
        </div>
        <hr>
        <form action="{{ urlFor('runModifOrganis', {'idOrg': organismo.id}) }}" method="POST">
            <div class="wrapper-elementos">
                <div class="header">
                    <i class="fa fa-question-circle fa-fw fa-lg"></i><i class="fa fa-pencil fa-fw fa-lg"></i> Datos del organismo publico
                </div>
                <div class="fila">
                    <div class="row">
                        <div class="large-12 columns">
                            <div class="large-9 columns">
                                <div class="titulo-fila">Nombre del organismo</div>
                                <input class="campo-fila" type="text" name="nombre">
                            </div>
                            <div class="large-3 columns">
                                <div class="titulo-fila">Cant. de cupos</div>
                                <input type="number" name="cupo" placeholder="Numero?">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="fila">
                    <div class="row">
                        <div class="large-12 columns">
                            <div class="large-12 columns">
                                <div class="titulo-fila">Descripcion del organismo</div>
                                <textarea rows=4 name="descripcion"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="fila">
                    <div class="row">
                        <div class="large-12 columns">
                            <div class="large-8 columns">
                                <div class="titulo-fila">URL</div>
                                <input type="text" name="utl" placeholder="Ej: http://www.google.com">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="fila">
                    <div class="row">
                        <div class="large-12 columns">
                            <div class="large-8 columns">
                                <div class="titulo-fila">Email</div>
                                <input class="campo-fila" type="email" name="email" placeholder="Ej: ejemplo@servidor.com" >
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ultima-fila">
                    <div class="row">
                        <div class="large-12 columns">
                            <div class="large-8 columns">
                                <div class="titulo-fila">Telefono</div>
                                <input class="campo-fila" type="text" name="telefono" placeholder="Ej: (0342) 452-XXXX">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button class="button success radius"><i class="fa fa-check fa-fw fa-lg"></i> Aceptar los cambios</button>
            </div>
        </form>
    </div>
</div>

{% endblock %}
{# ----------------------------------------------------------- #}
{% block modals %}{% endblock %}
{# ----------------------------------------------------------- #}
{% block scripts_cont %}
<script src="{{ baseUrl() }}/assets/js/autosize/autosize.min.js"></script>
<script>
    $(document).ready(function(){
        $('input[name="nombre"]').val('{{ organismo.nombre }}');
        $('input[name="cupo"]').val('{{ organismo.cupo }}');
        $('input[name="url"]').val('{{ organismo.url }}');
        $('input[name="email"]').val('{{ organismo.email }}');
        $('input[name="telefono"]').val('{{ organismo.telefono }}');
        autosize($('textarea[name="descripcion"]'));
    });

</script>
{% endblock %}
{# ----------------------------------------------------------- #}
