<form method="POST" action="{{ propuesta.id }}/votar">
	<div class="row">
		<div class="large-12 large-centered columns">
			<div id="posturaInfo">
				<input type="hidden" id="posturaVoto" name="postura" value="">
				<i></i>
				<h6><b></b></h6>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="large-12 large-centered columns">
			<div id="intro-comentario" class="text-center">
				<h6><b></b></h6>
				<p></p>
			</div>
		</div>
	</div>
	{% if voto.postura is null %}
	<div class="row">
		<div class="large-12 large-centered columns">
			<div id="cuadro-comentario" class="text-center">
			<div class="switch tiny round">
				<input id="checkbox" name="publico" type="checkbox">
