{% extends "contenido/propuesta/crear.twig" %}

{# VARIBLES #}
{% set modo = 'modificar' %}
{% set header_icono = 'fa-file-text-o' %}
{% set header_titulo = 'MODIFICAR PROPUESTA' %}
{% set url_form = urlFor('runModifPropues', {'idPro': propuesta.id}) %}

{# ----------------------------------------------------------- #}
{% block titulo %}Modificar propuesta - Virtu√°gora{% endblock %}
{# ----------------------------------------------------------- #}
{% block scripts_modificar %}
<script>
    $(document).ready(function(){
        $('[name="titulo"]').val('{{ propuesta.titulo }}');
        $('[name="categoria"] select').val('{{ propuesta.categoria.id }}');
        $("textarea[name='cuerpo']").sceditor('instance').val('{{ propuesta.cuerpo|bbCode }}', false);
        autosize($('textarea[name="cuerpo"]'));
        autosize($("textarea[name='titulo']"));
    });
</script>
{% endblock %}
