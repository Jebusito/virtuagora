{# VARIABLES PARA FORMATO DE MASTER-BODY.TWIG #}
{% set url_atras = '#' %}
{% set i_class_icon = 'fa fa-edit fa-fw' %}
{% set titulo = 'Crear una propuesta' %}
{% set comments = false %}

{# VARIABLES DE LA VISTA #}

{# ---------------------- #}

{% extends "master-body.twig" %}

{% block titulo %}
Virtuagora - Crear una propuesta
{% endblock %}

{% block linkhead %}
<link rel="stylesheet" href="{{ baseUrl() }}/assets/css/sceditor-main.css">
{% endblock %}

{% block contenido %}
<section id="alta-contenido">
	<form action="" method="POST">
		<div class="row">
			<div class="large-11 large-centered columns">
				<label><h6 class="subheader"><i class="fa fa-pencil fa-fw"></i>&nbsp;&nbsp;<b>Título de la propuesta</b></h6></label>
				<input name="titulo" type="text" placeholder="Escriba aqui el titulo de la propuesta" />
			</div>
		</div>
		<div class="row">
			<div class="large-11 large-centered columns">
				<label><h6 class="subheader"><i class="fa fa-tag fa-fw"></i>&nbsp;&nbsp;<b>Categorías asociadas</b></h6></label>
				<select name="categoria">
					{% for categoria in categorias %}
					<option value="{{categoria.id}}">{{categoria.nombre|capitalize}}</option>
					{% endfor %}
				</select>
			</div>
		</div>
		<div class="row">
			<div class="large-11 large-centered columns">
				<label><h6 class="subheader"><i class="fa fa-file-text-o fa-fw"></i>&nbsp;&nbsp;<b>Descripción de la propuesta</b></h6></label>
				<textarea id="cuerpo" name="cuerpo" placeholder="Describa de que se trata la propuesta" rows=10></textarea>
			</div>
		</div>
		<div class="row">
			<div class="large-11 large-centered columns">
				<label><h6 class="subheader"><i class="fa fa-tag fa-fw"></i>&nbsp;&nbsp;<b>Problemáticas asociadas</b></h6></label>
				<input name="problematicas" type="text" placeholder="Comience escribiendo el número de una problematica">
			</div>
		</div>
		<div class="row">
			<div class="large-11 large-centered columns">
				<label><h6 class="subheader"><i class="fa fa-tag fa-fw"></i>&nbsp;&nbsp;<b>Tags</b></h6></label>
				<input name="tags" type="text" placeholder="Comience escribiendo Tags" disabled/>
			</div>
		</div>
		<hr>
		<div class="row">
			<div class="large-6 large-centered columns text-center">
				<button type="submit" class="button small success radius"><i class="fa fa-check fa-lg fa-fw"></i>&nbsp;Publicar</button>
			</div>
		</div>
	</form>
</section>
{% endblock %}

{% block scripts %}
<script src="{{ baseUrl }}/assets/js/foundation/foundation.tooltip.js"></script>
<script src="{{ baseUrl }}/assets/js/underscore/underscore-min.js"></script>
<script src="{{ baseUrl() }}/assets/js/jquery/jquery.sceditor.bbcode.min.js"></script>
<script>
	$(function() {
		$("#cuerpo").sceditor({
			plugins: "bbcode",
			emoticonsEnabled: false,
			width: 'auto',
			style: "{{ baseUrl() }}/assets/css/sceditor-panel.css"
		});
	});
</script>

{% endblock %}
