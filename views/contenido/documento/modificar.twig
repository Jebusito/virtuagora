{% extends "contenido/documento/crear.twig" %}

{# VARIBLES #}
{% set modo = 'modificar' %}
{% set header_icono = 'fa-file-text-o' %}
{% set header_titulo = 'MODIFICAR DOCUMENTO' %}
{% set url_form = urlFor('runModifDocumen', {'idDoc': documento.id}) %}

{# ----------------------------------------------------------- #}
{% block titulo %}Modificar documento - Virtu√°gora{% endblock %}
{# ----------------------------------------------------------- #}
{% block scripts_modificar %}
<script>
    $(document).ready(function(){
        $('.row-crear-cuerpo').remove();
        $('[name="titulo"]').val('{{ documento.titulo }}');
        $('[name="categoria"] select').val('{{ documento.categoria.id }}');
        $('[name="descripcion"]').html("{{ documento.descripcion }}");
        autosize($('textarea[name="titulo"]'));
        autosize($("textarea[name='descripcion']"));
    });
</script>
{% endblock %}
{# ----------------------------------------------------------- #}

