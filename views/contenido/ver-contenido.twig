{# VARIBLES #}
{% set footer = true %}
{% set barraNav = true %}
{% set notificaciones = true %}
{% set html_class = '' %}
{% set body_class = 'plantilla-cont' %}

{% extends "master.twig" %}

{# ----------------------------------------------------------- #}
{% block linkhead %}
{% block linkheads_cont %}{% endblock linkheads_cont %}
{% endblock %}
{# ----------------------------------------------------------- #}
{% block body %}
{% include 'contenido/sharer-nav.twig'%}
<header class="vista-header-cont {{ color_cont }}">
    <div class="row">
        <div class="cuerpo-header-cont small-12 small-centered columns">
            <h1 class="titulo-cont">{{ titulo_cont }}</h1>
            <section class="datos-cont">
                {{ fecha_cont }} <a href="{{ urlFor('shwUsuario',{'IdUsu': autor_id}) }}"><img class="img-perfil radius no-border" src="{{ autor_avatar_32 }}"> {{ autor_nombre_apellido }}</a> <span class="usuario-pts"><i class="fa fa-trophy fa-fw fa-lg"></i>&nbsp;{{ autor_puntos }}</span>
                {% block datos_cont %}{% endblock datos_cont %}
            </section>
            <section class="opciones-cont">
                <ul class="opciones">
                    {% if autor_id == user.id or user.es_moderador == true %}
                    {% block botones_cont %}{% endblock %}
                    <li><a href="{{ url_modificar }}" class="button oposite radius tiny"><i class="fa fa-pencil fa-fw"></i>&nbsp;Modificar</a></li>
                    <li><a href="#" data-reveal-id="eliminarContenido" class="button alert radius tiny"><i class="fa fa-times fa-fw"></i>&nbsp;Eliminar</a></li>
                    {% endif %}
                    {% if user.es_moderador and user.id != autor_id %}
                    <li><a href="javascript:sancionar({{autor_id}})" class="button alert radius tiny"><i class="fa fa-exclamation-circle fa-fw"></i></a></li>
                    {% endif%}
                    <li><a href="{{ urlFor('shwIndex') }}" class="bt-volver button oposite radius tiny"><i class="fa fa-undo fa-fw"></i> Volver</a></li>
                </ul>
                {% block versiones_docu %}{% endblock %}
            </section>
        </div>
    </div>
</header>

<main class="vista-cuerpo-cont" role="main">
    <article class="cont">
        <section class="cuerpo-cont row">
            <div class="small-10 small-centered columns text-justify" style="margin-bottom: 10px;">
                {% block cuerpo_cont %}{% endblock cuerpo_cont %}
            </div>
        </section>

        <footer class="footer-cont row">
            <div class="small-10 small-centered columns">
                <!--
<section class="tags-cont">

</section>
-->
                <section class="share text-center visible-for-small-only">
                    {% include 'contenido/sharer-inline.twig'%}
                </section>
            </div>
        </footer>

        {% block opciones_cont %}{% endblock opciones_cont %}
        {% if ver_comentarios == true %}
        {% include 'contenido/comentarios.twig' %}
        {% endif %}
    </article>
</main>
{% endblock body %}
{# ----------------------------------------------------------- #}
{% block modals %}

{% if autor_id == user.id or user.es_moderador == true %}
{% include 'contenido/eliminar.twig' %}
{% endif %}

{% block modals_cont %}{% endblock modals_cont %}

{% endblock %}
{# ----------------------------------------------------------- #}
{% block scripts %}
<script src="{{ baseUrl() }}/assets/js/autosize/autosize.min.js"></script>
{% block scripts_cont %}{% endblock scripts_cont %}
{% if ver_comentarios == true %}
{% include 'contenido/comentarios.js.twig' %}
{% endif %}
{% if autor_id == user.id or user.es_moderador == true %}
<script>
    $('.bt-cancelar-eliminar').on('click', function() {
        $('#eliminarContenido').foundation('reveal', 'close');
    });
</script>
{% endif %}
{% endblock scripts %}
{# ----------------------------------------------------------- #}
