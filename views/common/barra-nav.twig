        <div class="small-6 columns text-left">
            <ul class="list">
                <li><a href="{{ urlFor('shwIndex') }}"><i class="bt fa fa-home"></i></a></li>
                {% if user is not empty %}
                <li><a href="{{ urlFor('shwUsuario',{'idUsu': user.id}) }}">{{ user.nombre }}</a></li>
                {% else %}
                <li>Bienvenido!</li>
                {% endif %}
            </ul>
        </div>
        <div class="small-6 columns text-right">
            <ul class="list">
                {% if user is not empty %}
                <li>
                    <div class="notificaciones">
                        <i class="bt bt-notificaciones fa fa-inbox fa-fw fa-lg"></i>
                        <span class="contador-on" style="display:none"></span>
                    </div>
                </li>
                <li><a href="{{ urlFor('shwModifUsuario') }}"><i class="bt fa fa-bars fa-fw fa-lg"></i></a></li>
