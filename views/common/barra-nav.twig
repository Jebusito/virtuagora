                {% endif %}
                <li>
                    <form id="form-salir"  action="{{ urlFor('runLogout') }}" method="POST">
                        <a href='#' class="bt-logout"><i class="bt fa fa-sign-out fa-fw fa-lg"></i></a>
                    </form>
                </li>
                {% else %}
                <li><a href="{{ urlFor('shwLogin') }}" class="hide-for-small-only">¿Tienes cuenta? Iniciar sesión <i class="fa fa-caret-down"></i></a></li>
