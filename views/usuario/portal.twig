{% extends "master-body.twig" %}

{% block titulo %}
Virtuagora - Portal de usuario
{% endblock %}

{% block contenido %}

<h1>Contenidos</h1>
<table>
    <thead>
        <tr>
            <th class="text-center" style="width: 50%;">TÃ­tulo</th>
            <th class="text-center" style="width: 10%;">Autor</th>
            <th class="text-center" style="width: 10%;">Fecha</th>
        </tr>
    </thead>
    <tbody>
        {% for con in contenidos %}
            <tr>
                <td><a href='{{ baseUrl }}/{{ con.contenible_type|lower }}/{{ con.contenible_id }}'>{{ con.titulo }}</a></td>
                <td>{{ con.autor.nombre }} {{ con.autor.apellido }}</td>
                <td>{{ con.created_at|date("m/d/Y") }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<h3>Opciones como administrador</h3>
{% if esModerador %}
    <a href="{{ urlFor('shwAdmOrganis') }}">Administrar organismos.</a><br>
{% else %}
	<div class="label warning"><i class="fa fa-times fa-fw fa-lg"></i>&nbsp;No sos administrador!</div>
{% endif %}
<h3>Opciones como funcionario</h3>
{% if esFuncionario %}
    <a href="{{ urlFor('shwCrearPropues') }}">Crear propuesta.</a><br>
    <a href="{{ urlFor('shwCrearPartido') }}">Crear partido.</a><br>
    <a href="{{ urlFor('shwCrearDocumen') }}">Crear documento abierto.</a><br>
{% else %}
	<div class="label warning"><i class="fa fa-times fa-fw fa-lg"></i>&nbsp;No sos funcionario!</div>
{% endif %}
<h3>Opciones como usuario</h3>
    <a href="{{ urlFor('shwCrearProblem') }}">Crear problematica.</a><br>
    <a href="{{ urlFor('shwListaPartido') }}">Listar partidos.</a><br>
{% endblock %}
